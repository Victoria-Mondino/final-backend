<section class="cart">
    <div class="cart-container">
        <h1 class="title-c">Cart</h1>
    </div>

    <div class="cart-list">
        <ul id="cart-items">
            {{#each cart.products}}
                <li class="cart-item" id="cart-item-{{this.product._id}}">
                    <strong>{{this.product.title}}</strong> - ${{this.product.price}}  
                    <input type="number" class="quantity-input" data-id="{{this.product._id}}" value="{{this.quantity}}" min="1">
                    <button class="update-quantity" data-id="{{this.product._id}}">Update</button>
                    <button class="remove-from-cart" data-id="{{this.product._id}}">Remove</button>
                </li>
            {{/each}}
        </ul>
    </div>

    <div class="cart-actions">
        <button id="empty-cart">Empty Cart</button>
    </div>
</section>

